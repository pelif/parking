<section class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-center">Create a new Car</h4>
    </div>
    <div class="panel-body">
        <form action="/cars/{{car._id}}" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <input type="text" name="driver_name" placeholder="Driver name" class="form-control" value="{{car.driver_name}}">
        </div>
        <div class="form-group">
            <input type="text" name="license_plate" placeholder="License Plate" class="form-control" value="{{car.license_plate}}">
        </div>
        <div class="form-group">
            <select name="status" id="" class="form-control">
                {{#equals car.status 'IN'}}
                <option value="IN" selected="selected">Inside</option>
                <option value="OUT">Outside</option>
                <option value="-1">Choose an option</option>
                {{/equals}}
                {{#equals car.status 'OUT'}}
                <option value="OUT" selected="selected">Outside</option>
                <option value="IN">Inside</option>
                <option value="-1">Choose an option</option>   
                {{/equals}}
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-success">
        </div>
        </form>
    </div>
</section>